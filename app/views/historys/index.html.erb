<% provide :title, "TaskHistory" %>

<div class="container-fluid">
  <div class="p-5 text-center">
    <h1>過去のタスク</h1>
    
    <% @tasks.each do |task| %>
      <ul class="list-unstyled">
        <li><%= task.updated_at.strftime("%Y年%m月%d日 %H時%M分") %>
            <%= task.content %>
        </li>
      </ul>
    <% end %>
  </div>
</div>